# 4. OBJECT MODEL (CONCEPTS)
Concept: Spaceship
    Name
    Fuel
    Integrity

    To ReportStatus:
        Print "Ship: " + This.Name + " | Fuel: " + This.Fuel + "%"

    To Launch:
        If This.Fuel > 90:
            Print This.Name + " has launched successfully!"
            Set This.Fuel to This.Fuel - 10
        Else:
            Print "Not enough fuel to launch."

# 5. CONTEXT MODEL (SITUATIONS)
Situation: EmergencyMode
    Adjust Spaceship:
        To ReportStatus:
            Print "MAYDAY! " + This.Name + " INTEGRITY CRITICAL: " + This.Integrity + "%"
        
        To Launch:
            Print "LAUNCH ABORTED due to Emergency Protocol."

# 6. THE INTEGRATION STORY
Story:
    Print ""
    Print "[4/6] Testing Creation & State..."
    
    Create Spaceship Called Voyager
    Set Voyager.Name to "Voyager 1"
    Set Voyager.Fuel to 100
    Set Voyager.Integrity to 45
    
    Voyager.ReportStatus
    Voyager.Launch
    
    # Verify State Change (Fuel should be 90 now)
    If Voyager.Fuel = 90:
        Print "State Mutation: Fuel decreased correctly."
    Else:
        Print "State Mutation Failed: Fuel is " + Voyager.Fuel

    Print ""
    Print "[5/6] Testing Context Switch..."
    
    Switch on EmergencyMode
    
    # Behavior should change completely
    Voyager.ReportStatus
    Voyager.Launch
    
    Switch off EmergencyMode
    
    Print ""
    Print "[6/6] Testing Context Return..."
    Voyager.ReportStatus
    
    Print ""
    Print "=== CERTIFICATION COMPLETE ==="